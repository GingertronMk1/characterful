{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('character.create') }}">Add</a>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Main Class</th>
                <th>Current HP</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for character in characters %}
            <tr>
                <td>{{ character.name }}</td>
                <td>{{ character.mainClass ? character.mainClass.class : '' }}</td>
                <td>{{ character.current_hit_points }}</td>
                <td><a href="{{ path('character.update', {slug: character.slug}) }}">Update</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}